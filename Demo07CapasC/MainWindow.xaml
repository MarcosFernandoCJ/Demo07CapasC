<Window x:Class="Demo07CapasC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo07CapasC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <Label Content="Nombre:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Width="220" MinWidth="120" />
            </StackPanel>

            <!-- Precio -->
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <Label Content="Precio:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPrice" Width="220" MinWidth="120" />
            </StackPanel>

            <!-- Stock -->
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <Label Content="Stock:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtStock" Width="220" MinWidth="120" />
            </StackPanel>
            <Button Content="Save" Click="Button_Click_1"></Button>
            <Button Content="Get" Click="Button_Click"></Button>
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Height="300"></DataGrid>
        </StackPanel>

    </Grid>
</Window>
